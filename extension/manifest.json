{
    "manifest_version": 2,
    "name": "Picture Paint",
    "version": "0.6.0",
    "author": "Danny Guo",
    "homepage_url": "https://github.com/dguo/picture-paint",
    "applications": {
        "gecko": {
            "id": "@picture-paint",
            "strict_min_version": "63.0a1"
        }
    },
    "icons": {
        "48": "img/logo-48.png",
        "96": "img/logo-96.png"
    },
    "permissions": ["<all_urls>", "alarms", "storage", "theme"],
    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "48": "img/logo-48.png",
            "96": "img/logo-96.png"
        },
        "default_title": "Picture Paint",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}
